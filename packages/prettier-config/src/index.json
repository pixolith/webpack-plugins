{
    "semi": true,
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.s?(a|c)ss",
            "options": {
                "trailingComma": "none"
            }
        }
    ]
}
